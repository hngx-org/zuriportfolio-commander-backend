            },
            "userId": {
              "type": "string"
            },
            "shopId": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "quantity": {
              "type": "integer"
            },
            "categoryId": {
              "type": "integer"
            },
            "price": {
              "type": "number"
            },
            "discountPrice": {
              "type": "number"
            },
            "tax": {
              "type": "number"
            },
            "currency": {
