            "id": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "user": {
              "type": "string"
            },
            "createdAt": {
              "type": "string",
              "format": "date-time"
            }
          }
        },
        "ProductSubCategory": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
