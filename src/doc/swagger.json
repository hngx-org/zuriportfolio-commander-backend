        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/searchOrder"
                },
                "example": [
                  {
                    "order_id": "1122",
                    "order_price": 12.22,
                    "createdAt": "2023-10-11T18:00:52.000Z",
                    "merchant": {
