            "id": {
              "type": "string"
            },
            "user_id": {
              "type": "string"
            },
            "sales": {
              "type": "integer"
            },
            "order_id": {
              "type": "string"
            },
            "createdAt": {
              "type": "string",
              "format": "date-time"
            }
          },
          "required": ["id", "user_id", "sales", "order_id", "createdAt"]
