        "searchOrder": {
          "type": "object",
          "properties": {
            "order_id": {
              "type": "string"
            },
            "order_price": {
              "type": "number",
              "format": "float"
            },
            "createdAt": {
              "type": "string",
              "format": "date-time"
            },
            "merchant": {
              "$ref": "#/components/schemas/MerchantData"
            }
          },"required": ["id", "order_id", "product_id", "order_price", "createdAt", "updatedAt", "productId", "product"]
